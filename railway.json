{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "setupCommand": "apt-get update && apt-get install -y maven",
    "buildCommand": "cd core && mvn clean package -DskipTests",
    "startCommand": "cd core && java -Dserver.port=$PORT -jar target/demo-0.0.1-SNAPSHOT.jar"
  },
  "deploy": {
    "runtime": "V2"
  }
}
